{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "types": ["node"],
        "paths": {
            "h3": ["../or3-chat/node_modules/h3"],
            "~~/convex/*": ["../or3-chat/convex/*"],
            "~~/*": ["../or3-chat/*"],
            "~~": ["../or3-chat"],
            "~/*": ["../or3-chat/app/*"],
            "~": ["../or3-chat/app"],
            "~/types/*": ["../or3-chat/types/*"],
            "#imports": ["./src/shims/imports.ts"],
            "#app": ["../or3-chat/.nuxt/types/app.d.ts"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
