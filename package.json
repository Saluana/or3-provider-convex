{
    "name": "or3-provider-convex",
    "version": "0.0.1",
    "description": "Convex sync, storage, and backend provider for OR3 Chat â€” real-time sync, cloud file storage, rate limiting, background jobs, and workspace management.",
    "license": "MIT",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/types.d.mts",
            "import": "./dist/module.mjs"
        },
        "./nuxt": {
            "types": "./dist/types.d.mts",
            "import": "./dist/module.mjs"
        }
    },
    "main": "./dist/module.mjs",
    "types": "./dist/types.d.mts",
    "typesVersions": {
        "*": {
            ".": [
                "./dist/types.d.mts"
            ]
        }
    },
    "files": [
        "dist",
        "templates/convex.pack.json.gz",
        "scripts/init.mjs"
    ],
    "bin": {
        "or3-provider-convex": "./scripts/init.mjs"
    },
    "scripts": {
        "prepack": "bun run build && bun run build:templates",
        "build": "nuxt-module-build build",
        "build:templates": "node ./scripts/build-template-pack.mjs",
        "type-check": "tsc --noEmit",
        "init": "node ./scripts/init.mjs",
        "test": "vitest run"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "convex": "^1.31.3",
        "convex-nuxt": "0.1.5",
        "convex-vue": "^0.1.4"
    },
    "peerDependencies": {
        "@nuxt/kit": "^3.0.0",
        "nuxt": "^3.0.0 || ^4.0.0",
        "zod": "^3.0.0 || ^4.0.0"
    },
    "devDependencies": {
        "@nuxt/module-builder": "^1.0.2",
        "@types/node": "^25.2.1",
        "h3": "^1.15.4",
        "pathe": "^2.0.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    }
}
